<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>jahia-modules</artifactId>
        <groupId>org.jahia.modules</groupId>
        <version>7.0.0.1</version>
    </parent>
    <artifactId>servlet-osgi-module</artifactId>
    <name>Jahia Servlet module example</name>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <description>An example of how to register a servlet inside an OSGi bundle</description>

    <scm>
        <connection>scm:git:git@github.com:Jahia/servlet-osgi-module.git</connection>
        <url>scm:git:git@github.com:Jahia/servlet-osgi-module.git</url>
        <developerConnection>scm:git:git@github.com:Jahia/servlet-osgi-module.git</developerConnection>
    </scm>

    <repositories>
        <repository>
            <id>jahia-public</id>
            <name>Jahia Public Repository</name>
            <url>https://devtools.jahia.com/nexus/content/groups/public</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <!-- We need to prevent the generation of the dependency to the blueprint package because Gemini Blueprint doesn't import it (https://bugs.eclipse.org/bugs/show_bug.cgi?id=351755) -->
                        <Import-Package>!org.osgi.service.blueprint,${jahia.plugin.projectPackageImport},*</Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
